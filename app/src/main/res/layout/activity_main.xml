<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/background"
        android:rotationY="360"
        app:layout_constraintBottom_toTopOf="@id/rv_dogs"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="30dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36sp"
            android:layout_height="match_parent"
            android:src="@drawable/logo2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/day_primary40"
            android:fontFamily="@font/optimus"
            android:layout_gravity="center"
            android:textSize="32sp" />

        <ImageButton
            android:id="@+id/about_page"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_gravity="right"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/account_circle_fill1_wght400_grad0_opsz48"
            android:background="@null"
            tools:layout_editor_absoluteX="112dp"
            app:tint="@color/day_primary40"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dogs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
